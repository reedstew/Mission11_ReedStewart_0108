@{
}

@model Book

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <div class="d-flex justify-content-between align-items-center">
            <span class="text-muted" style="font-size:small;">ISBN: @Model.Isbn</span>
            <span class="badge rounded-pill bg-success">$@Model.Price</span>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item" style="font-size: 20px;"><span class="text-muted" style="font-size:14px;">Author: </span>@Model.Author</li>
            <li class="list-group-item"><span class="text-muted" style="font-size:14px;">Publisher: </span> @Model.Publisher</li>
            <li class="list-group-item"><span class="text-muted" style="font-size:14px;">Genre: </span> @Model.Classification/@Model.Category</li>
            <li class="list-group-item">@Model.PageCount pages</li>
        </ul>
    </div>
</div>
